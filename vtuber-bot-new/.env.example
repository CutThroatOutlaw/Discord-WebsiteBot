# Copy to .env for local development
PORT=3001
# Public base URL used for OAuth callbacks and absolute links
PUBLIC_BASE_URL=http://localhost:3001
# Discord application creds (optional for limited-mode or dev-login)
CLIENT_ID=
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_REDIRECT_URI=
# Bot token (optional for limited-mode). Set to enable Discord client features.
DISCORD_TOKEN=
# Enable dev helper routes like /dev-login
DEV_MODE=1
# Session secret for cookies
SESSION_SECRET=dev-secret
